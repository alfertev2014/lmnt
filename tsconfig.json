{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "node_modules/*",
    "./node_modules",
    "./node_modules/*",
  ]
}